{
    "name": "directus-extension-api-docs",
    "version": "1.4.4",
    "description": "directus extension for swagger interface and custom endpoints definitions",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "!*.map"
    ],
    "repository": "https://github.com/sacconazzo/directus-extension-api-docs",
    "homepage": "https://github.com/sacconazzo/directus-extension-api-docs#readme",
    "keywords": [
        "directus",
        "directus-extension",
        "directus-custom-endpoint",
        "swagger",
        "custom endpoints",
        "openapi definition",
        "openapi"
    ],
    "directus:extension": {
        "type": "endpoint",
        "path": "dist/index.js",
        "source": "src/index.ts",
        "host": "^9.19.2"
    },
    "scripts": {
        "test": "jest --verbose=true",
        "lint": "eslint --ignore-path .gitignore --ext .ts tests/ src/",
        "lint:fix": "pnpm lint --fix",
        "build": "directus-extension build",
        "dev": "directus-extension build -w --no-minify"
    },
    "dependencies": {
        "@pnpm/find-workspace-dir": "^5.0.0",
        "express-openapi-validator": "^4.13.8",
        "js-yaml": "^4.1.0",
        "swagger-ui-express": "^4.6.0"
    },
    "devDependencies": {
        "@directus/extensions-sdk": "^9.21.2",
        "@directus/shared": "^9.21.2",
        "@types/express": "^4.17.15",
        "@types/jest": "^29.2.4",
        "@types/node": "^18.11.16",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "express": "^4.18.2",
        "jest": "^29.3.1",
        "jest-extended": "^3.2.0",
        "openapi-schema-validator": "^12.1.0",
        "prettier": "^2.8.1",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    }
}
